
<h3>Contact</h3>

   <div class="formContact" > 
      <form method="post" >
         <span class="success"><?= $userMessages['sendSuccess'] ?></span>
         <div class="mainDivForm"> 
            <div class="formDiv">
               <label for="firstName">First Name
                  <span class="errorMessage"><?=$userMessages['requiredFirstName'] ?></span>
               </label>
               <input type="text"  id="firstName" name="firstName" placeholder="Jermain ">
            </div>
            <div class="formDiv">
               <label for="lastName">Last Name
                  <span class="errorMessage"><?=$userMessages['requiredLastName'] ?></span>
               </label>
               <input type="text"  id="lastName" name="lastName" placeholder="Jackson">
            </div>
            <div class="formDiv">
               <label for="phone">Phone
                  <span class="errorMessage"><?=$userMessages['requiredPhone'] ?></span>
               </label>
               <input type="tel" id="phone" name="phone" placeholder="650 450 388">
            </div>
            <div class="formDiv">
               <label for="eMail">Email
                  <span class="errorMessage"><?=$userMessages['requiredEmail'] ?></span>
               </label>
               <input type="email" id="eMail" name="eMail" placeholder="jermain.jackson@gmail.com">
            </div>
            <div class="formDiv">
               <label for="message" >Message
                  <span class="errorMessage"><?=$userMessages['requiredMessage'] ?></span>
               </label>
               <textarea id='message' name='message' rows="5" cols="40" placeholder ="Hi Katia !..." ></textarea>
            </div>
            <div class="formDivSubmit iconDiv">
               <i class="fa-solid fa-paw icon"></i>
               <input type="submit" value="" name="sendMessageSubmit" class="inputWithIcon pawButton">
            </div>
         </div>
      </form>
   </div>
    
   <script src="../js/contact.js"></script>